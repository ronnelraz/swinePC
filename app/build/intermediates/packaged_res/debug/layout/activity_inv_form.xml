<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20px"
    tools:context=".inv_form">

    <RelativeLayout
        android:backgroundTint="@color/bgEdit"
        android:background="@drawable/radius_border"
        android:id="@+id/menuheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fattening"/>

        <TextView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cpf_imm_sook_bold"
            android:text="Swine Physical Count Menu"
            android:textColor="@color/purple_500"
            android:textSize="30sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20px"
            android:backgroundTint="@color/error"
            android:foreground="?attr/actionBarItemBackground"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:cornerRadius="50px"
            app:icon="@drawable/logout"
            app:iconSize="20sp"
            app:iconTint="@color/white" />


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_jwt_username"
            android:drawablePadding="5dp"
            android:drawableTint="@color/purple_200"
            android:fontFamily="@font/cpf_imm_sook_semibold"
            android:gravity="center|left"
            android:textSize="18sp"
            tools:text="User : ronnel.raz" />


        <TextView
            android:id="@+id/role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:drawableLeft="@drawable/ic_jwt_role"
            android:drawablePadding="5dp"
            android:drawableTint="@color/purple_200"
            android:fontFamily="@font/cpf_imm_sook_semibold"
            android:gravity="center|left"
            android:textSize="18sp"
            tools:text="Role : IT - IT Department" />

    </RelativeLayout>




        <GridLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/menuheader"
            android:background="@drawable/radius_border"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:useDefaultMargins="true"
            android:columnCount="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/create"
                android:onClick="create"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/tabBackgroundColor"
                app:icon="@drawable/create"
                app:iconGravity="textTop"
                app:elevation="10dp"
                app:iconSize="70sp"
                android:textColor="@color/black"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Create" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/purple_200"
                app:elevation="10dp"
                app:icon="@drawable/edit"
                app:iconGravity="textTop"
                app:iconSize="70sp"
                android:onClick="edit"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Edit" />

            <com.google.android.material.button.MaterialButton
                android:onClick="confirm"
                android:id="@+id/confirm"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/purple_200"
                app:elevation="10dp"
                app:icon="@drawable/checked"
                app:iconGravity="textTop"
                app:iconSize="70sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Confirm" />

            <com.google.android.material.button.MaterialButton
                android:onClick="cancel"
                android:id="@+id/cancel"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/purple_200"
                app:elevation="10dp"
                app:icon="@drawable/ic_icons8_cancel"
                app:iconGravity="textTop"
                app:iconSize="70sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Cancel" />




            <com.google.android.material.button.MaterialButton
                android:id="@+id/pdf"
                android:onClick="pdf"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/tabBackgroundColor"
                app:elevation="10dp"
                app:icon="@drawable/icons8_pdf_1"
                app:iconGravity="textTop"
                app:iconSize="70sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Generate PDF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upload"
                android:onClick="upload"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/tabBackgroundColor"
                app:elevation="10dp"
                app:icon="@drawable/ic_icons8_import_pdf"
                app:iconGravity="textTop"
                app:iconSize="70sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="UPLOAD File" />




            <com.google.android.material.button.MaterialButton
                android:id="@+id/FarmSetup"
                android:onClick="FarmSetup"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/tabBackgroundColor"
                app:elevation="10dp"
                app:icon="@drawable/icons8_smart_home_checked"
                app:iconGravity="textTop"
                app:iconSize="70sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Farm setup" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/report"
                android:fontFamily="@font/cpf_imm_sook_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/radius_border"
                app:backgroundTint="@color/shimmer_placeholder"
                app:iconTint="@color/purple_200"
                app:elevation="10dp"
                app:icon="@drawable/ic_icons8_report_file"
                app:iconGravity="textTop"
                app:iconSize="70sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Report" />



        </GridLayout>




</RelativeLayout>