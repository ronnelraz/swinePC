<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:background="#EDEBEB"
        android:id="@+id/maintopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cpf_imm_sook_regular"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:padding="5dp"
        tools:text="{Company Name}"
        android:textSize="18sp"/>

    <LinearLayout
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/headerAnnex"
        android:layout_below="@+id/maintopic"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#FBC02D"
        android:layout_height="45dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:text="Certification/Permit"
            android:fontFamily="@font/cpf_imm_sook_semibold"
            android:textColor="@color/black"
            android:textSize="18sp" />

    <TextView
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="YES"
        android:textColor="@color/purple_500"
        android:fontFamily="@font/cpf_imm_sook_semibold"
        android:textSize="18sp"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="NO"
        android:textColor="@color/error"
        android:fontFamily="@font/cpf_imm_sook_semibold"
        android:textSize="18sp"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="N/A"
        android:textColor="@color/main_disabled_stroke_color"
        android:fontFamily="@font/cpf_imm_sook_semibold"
        android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/cpf_imm_sook_semibold"
            android:text="if No,State Reason"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>




</RelativeLayout>