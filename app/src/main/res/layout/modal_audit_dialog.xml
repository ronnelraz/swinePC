<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:layout_margin="0.3in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10pt"
        app:cardElevation="10px"
        app:cardMaxElevation="10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">







            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cut Off Date"
                android:textSize="18sp"
                android:fontFamily="@font/cpf_imm_sook_bold"/>

            <TextView
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:id="@+id/currentDate"
                android:backgroundTint="#EFEDED"
                android:background="@drawable/radius_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/calendar"
                android:drawableTint="@color/purple_500"
                android:fontFamily="@font/cpf_imm_sook_regular"/>


            <TextView
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audit Date"
                android:fontFamily="@font/cpf_imm_sook_bold"/>

            <TextView
                android:fontFamily="@font/cpf_imm_sook_regular"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:id="@+id/auditDate"
                android:backgroundTint="#EFEDED"
                android:background="@drawable/radius_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/calendar"
                android:drawableTint="@color/purple_500"/>



            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="50px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/positive"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_icons8_done"
                    app:iconGravity="start"
                    app:iconPadding="-10dp"
                    android:layout_marginRight="10px"
                    android:backgroundTint="#388E3C"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:iconTint="@color/white"

                    android:text="Save" />

                <com.google.android.material.button.MaterialButton
                    android:backgroundTint="@color/error"
                    android:id="@+id/negative"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_icons8_multiply"
                    android:layout_marginLeft="10px"
                    app:iconGravity="start"
                    app:iconPadding="-5dp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:iconTint="@color/white"
                    android:text="Cancel" />




            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>